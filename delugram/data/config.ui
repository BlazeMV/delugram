<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.0"/>
  <object class="GtkBox" id="prefs_box">
    <property name="visible">True</property>
    <property name="orientation">vertical</property>

    <!-- Telegram Token -->
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Telegram Token:</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="entry_telegram_token">
            <property name="visible">True</property>
          </object>
        </child>
      </object>
    </child>

    <!-- Admin Chat ID -->
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Admin Chat ID:</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="entry_admin_chat_id">
            <property name="visible">True</property>
            <property name="input_purpose">digits</property>
          </object>
        </child>
      </object>
    </child>

    <!-- Users List -->
    <child>
      <object class="GtkScrolledWindow">
        <property name="visible">True</property>
        <property name="hexpand">True</property>
        <property name="vexpand">True</property>
        <child>
          <object class="GtkTreeView" id="treeview_users">
            <property name="visible">True</property>
            <property name="headers_visible">True</property>
            <child>
              <object class="GtkTreeViewColumn">
                <property name="title">Chat ID</property>
                <child>
                  <object class="GtkCellRendererText"/>
                  <attributes>
                    <attribute name="text">0</attribute>
                  </attributes>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkTreeViewColumn">
                <property name="title">Name</property>
                <child>
                  <object class="GtkCellRendererText"/>
                  <attributes>
                    <attribute name="text">1</attribute>
                  </attributes>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

    <!-- Buttons for Managing Users -->
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <child>
          <object class="GtkButton" id="btn_add_user">
            <property name="label" translatable="yes">Add User</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="btn_remove_user">
            <property name="label" translatable="yes">Remove User</property>
          </object>
        </child>
      </object>
    </child>

    <!-- Data Store for Users -->
    <child>
      <object class="GtkListStore" id="liststore_users">
        <columns>
          <column type="gchararray"/>
          <column type="gchararray"/>
        </columns>
      </object>
    </child>

  </object>
</interface>
